digraph "Simple_Hierarchy" {
    graph [rankdir=TD, splines=ortho, nodesep=0.6, ranksep=0.8, bgcolor=white, fontname="helvetica", fontsize=12]
    node [fontname="helvetica", fontsize=12]
    edge [fontname="helvetica", fontsize=12, color="#000000", style=solid, penwidth=1, arrowhead=normal, arrowtail=none]

    ceo [label="CEO", shape=box, style="rounded,solid,filled", fillcolor="#FFD700", fontcolor="black"]
