    vp_eng [label="VP Engineering", shape=box, style="rounded,solid,filled", fillcolor="#4D4DC9", fontcolor="white"]
    vp_ops [label="VP Operations", shape=box, style="rounded,solid,filled", fillcolor="#4D4DC9", fontcolor="white"]
    sales_a [label="Sales Rep A", shape=box, style="rounded,solid,filled", fillcolor="#4D654D", fontcolor="white"]
    sales_b [label="Sales Rep B", shape=box, style="rounded,solid,filled", fillcolor="#4D654D", fontcolor="white"]
    dev_a [label="Developer A", shape=box, style="rounded,solid,filled", fillcolor="#4D654D", fontcolor="white"]
    dev_b [label="Developer B", shape=box, style="rounded,solid,filled", fillcolor="#4D654D", fontcolor="white"]
    ops_a [label="Ops Staff A", shape=box, style="rounded,solid,filled", fillcolor="#4D654D", fontcolor="white"]
    ops_b [label="Ops Staff B", shape=box, style="rounded,solid,filled", fillcolor="#4D654D", fontcolor="white"]

    ceo -> vp_sales
    ceo -> vp_eng
    ceo -> vp_ops
    vp_sales -> sales_a
    vp_sales -> sales_b
    vp_eng -> dev_a
    vp_eng -> dev_b
    vp_ops -> ops_a
    vp_ops -> ops_b

}